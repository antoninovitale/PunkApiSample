<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="64dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Method"/>


    <antoninovitale.dropcodechallenge.util.countdownview.CountdownView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:layout_toEndOf="@+id/name"
        android:layout_toLeftOf="@+id/status"
        android:layout_toRightOf="@+id/name"
        android:layout_toStartOf="@+id/status"
        app:isHideTimeBackground="true"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:suffixGravity="bottom"
        app:suffixHour="@string/hours"
        app:suffixMinute="@string/minutes"
        app:suffixSecond="@string/seconds"
        app:suffixTextColor="@color/black_opacity_70"
        app:suffixTextSize="12sp"
        app:timeTextColor="@color/black"
        app:timeTextSize="14sp"/>

    <TextView
        android:id="@+id/status"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/idle"
        android:textColor="@color/black"
        android:textSize="12sp"/>


</RelativeLayout>